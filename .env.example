# PennApps Private Meetups Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# EXPO/REACT NATIVE FRONTEND VARIABLES (EXPO_PUBLIC_*)
# =============================================================================

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Clerk Authentication
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_APP_URL=https://yourapp.com

# =============================================================================
# BACKEND/SERVER VARIABLES (NOT EXPO_PUBLIC_*)
# =============================================================================

# Clerk Secret Key (for backend verification)
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Supabase Service Role Key (for backend operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_URL=https://your-project.supabase.co

# =============================================================================
# DEVELOPMENT/DEMO VARIABLES
# =============================================================================

# Set to 'true' to enable demo mode with mock data
DEMO_MODE=false

# Mock API responses when backend is not available
MOCK_API_RESPONSES=false

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Deep linking configuration
EXPO_PUBLIC_DEEP_LINK_SCHEME=pennapps

# Map configuration
EXPO_PUBLIC_DEFAULT_LATITUDE=39.9526
EXPO_PUBLIC_DEFAULT_LONGITUDE=-75.1652

# File upload configuration
EXPO_PUBLIC_MAX_FILE_SIZE=10485760
EXPO_PUBLIC_MAX_FILES_PER_MEETUP=25
EXPO_PUBLIC_MAX_BYTES_PER_MEETUP=104857600
