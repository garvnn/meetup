# PennApps Private Meetups - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# FRONTEND CONFIGURATION (EXPO_PUBLIC_* variables are exposed to the app)
# =============================================================================
# Backend API URL (for frontend to call backend)
EXPO_PUBLIC_API_URL=http://localhost:8000

# Supabase configuration (exposed to frontend)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Clerk authentication (exposed to frontend)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key-here

# App URL for deep linking (used in share links)
EXPO_PUBLIC_APP_URL=https://yourapp.com

# =============================================================================
# BACKEND CONFIGURATION (Server-side only)
# =============================================================================
# Supabase configuration (server-side)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Clerk authentication (server-side)
CLERK_SECRET_KEY=sk_test_your-secret-key-here

# Backend server configuration
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'development' for local development
NODE_ENV=development

# Enable debug logging
DEBUG=true

# =============================================================================
# TEAM SETUP NOTES
# =============================================================================
# For physical iOS devices, you'll need HTTPS. Use one of these:
# 1. ngrok: npx ngrok http 8000
# 2. Cloudflare Tunnel: cloudflared tunnel --url http://localhost:8000
# 3. Deploy to a cloud service (Railway, Render, etc.)
#
# For Android emulator, use: http://10.0.2.2:8000
# For iOS simulator, use: http://localhost:8000
#
# Update EXPO_PUBLIC_API_URL with your HTTPS URL for physical devices
